{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./types" // Asegúrate de incluir esta línea para tus tipos personalizados
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
